        <activity
            android:name="fmd_android_clint.activities.SettingsActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="fmd_android_clint.activities.LocationActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="fmd_android_clint.activities.DevicesActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="fmd_android_clint.activities.DeviceLocationsActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <service
            android:name="fmd_android_clint.common.BackgroundService"
            android:enabled="true" />
    </application>
    <application>
    </application>

</manifest>