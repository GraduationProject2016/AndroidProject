            android:name="fmd_android_clint.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fmd_android_clint.activities.SignUpActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="fmd_android_clint.activities.SignInActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
