<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linear_layout_tags"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin_left"
        android:layout_marginRight="@dimen/activity_margin_right"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="10sp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="15dip"
            android:gravity="center"
            android:text="@string/location_loc"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="55dip"
            android:gravity="center"
            android:text="@string/no_devcises"
            android:textColor="#f0f"
            android:textSize="20sp"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>